<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.hrtrainingplatform.web.login.RegisterScreen"
        messagesPack="com.company.hrtrainingplatform.web.login">
    <dialogMode height="600"
                width="800"/>
    <layout>
        <grid align="MIDDLE_CENTER"
              spacing="true">
            <columns count="2"/>
            <rows>
                <row>
                    <label value="Employee ID"/>
                    <textField id="loginField"
                               datatype="int"
                               required="true"/>
                </row>
                <row>
                    <label value="Password"/>
                    <passwordField id="passwordField"
                                   required="true"/>
                </row>
                <row>
                    <hbox align="MIDDLE_CENTER"
                          colspan="2"
                          spacing="true">
                        <button id="okBtn"
                                align="TOP_RIGHT"
                                caption="OK"
                                invoke="onOkBtnClick"/>
                        <button id="cancelBtn"
                                caption="Cancel"
                                invoke="onCancelBtnClick"/>
                    </hbox>
                </row>
            </rows>
        </grid>
    </layout>
</window>
