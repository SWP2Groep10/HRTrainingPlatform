<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.hrtrainingplatform.web.login.RestorePasswordScreen"
        messagesPack="com.company.hrtrainingplatform.web.login">
    <dialogMode height="600"
                width="800"/>
    <layout>
        <label id="warningLabel"
               icon="font-icon:WARNING"
               value="Sorry, there is no such user"
               visible="false"/>
        <textField id="loginField"
                   caption="Login"
                   required="true"
                   requiredMessage="Please enter your login"
                   width="300px"/>
        <hbox spacing="true">
            <button id="okBtn"
                    align="TOP_RIGHT"
                    caption="Send new password"
                    invoke="onSendPasswordBtnClick"/>
            <button id="cancelBtn"
                    caption="Cancel"
                    invoke="onCancelBtnClick"/>
        </hbox>
    </layout>
</window>
