<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.hrtrainingplatform.web.location.LocationBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.hrtrainingplatform.web.location">
    <dsContext>
        <datasource id="locationDs"
                    class="com.company.hrtrainingplatform.entity.Location"
                    view="location-view"/>
        <groupDatasource id="locationsDs"
                         class="com.company.hrtrainingplatform.entity.Location"
                         view="location-view">
            <query>
                <![CDATA[select e from hrtrainingplatform$Location e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split height="100%"
               orientation="vertical"
               pos="19"
               width="100%">
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  margin="true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="locationDs">
                        <column width="250px">
                            <field caption="Location Address"
                                   property="address"/>
                            <field caption="Location Name"
                                   property="locationName"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="locationsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            height="250px"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="address"
                                caption="Location Address"/>
                        <column id="locationName"
                                caption="Location Names"/>
                    </columns>
                    <rows datasource="locationsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
        </split>
    </layout>
</window>
