<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.hrtrainingplatform.web.certificate.CertificateBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.hrtrainingplatform.web.certificate">
    <dsContext>
        <datasource id="certificateDs"
                    class="com.company.hrtrainingplatform.entity.Certificate"
                    view="certificate-view"/>
        <groupDatasource id="certificatesDs"
                         class="com.company.hrtrainingplatform.entity.Certificate"
                         view="certificate-view">
            <query>
                <![CDATA[select e from hrtrainingplatform$Certificate e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split height="100%"
               orientation="vertical"
               pos="19"
               width="100%">
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="true,true,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="certificateDs">
                        <column width="250px">
                            <field caption="Certificate Title"
                                   property="description"/>
                            <field caption="Upload File"
                                   property="file"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="certificatesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                    </actions>
                    <columns>
                        <column id="description"
                                caption="Certificate Title"/>
                        <column id="file"
                                caption="Uploaded File"/>
                    </columns>
                    <rows datasource="certificatesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="excelButton"
                                action="table.excel"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
        </split>
    </layout>
</window>
