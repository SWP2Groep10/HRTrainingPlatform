<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.hrtrainingplatform.web.isbnnr.ISBNnrBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.hrtrainingplatform.web.isbnnr">
    <dsContext>
        <datasource id="iSBNnrDs"
                    class="com.company.hrtrainingplatform.entity.ISBNnr"
                    view="_local"/>
        <groupDatasource id="iSBNnrsDs"
                         class="com.company.hrtrainingplatform.entity.ISBNnr"
                         view="_local">
            <query>
                <![CDATA[select e from hrtrainingplatform$ISBNnr e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split height="100%"
               orientation="vertical"
               pos="14"
               width="100%">
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="true,true,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="iSBNnrDs">
                        <column width="250px">
                            <field property="isbn"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      margin="false,false,true,false"
                      spacing="true">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="iSBNnrsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="ShowBook"
                                caption="View or Buy Book"
                                icon="font-icon:BOOK"
                                invoke="onShowBookClick"/>
                    </actions>
                    <columns>
                        <column id="isbn"
                                caption="Book ISBN Number"/>
                    </columns>
                    <rows datasource="iSBNnrsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="ShowBook"
                                action="table.ShowBook"
                                caption="View or Buy Book"
                                icon="font-icon:BOOK"
                                invoke="onShowBookClick"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
        </split>
    </layout>
</window>
