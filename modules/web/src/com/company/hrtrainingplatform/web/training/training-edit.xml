<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.hrtrainingplatform.web.training.TrainingEdit"
        datasource="trainingDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.hrtrainingplatform.web.training">
    <dsContext>
        <datasource id="trainingDs"
                    class="com.company.hrtrainingplatform.entity.Training"
                    view="training-view">
            <collectionDatasource id="attendingListDs"
                                  property="attendingList"/>
            <collectionDatasource id="locationDs"
                                  property="location"/>
            <collectionDatasource id="recBookListDs"
                                  property="recBookList"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <scrollBox height="100%"
                   responsive="true"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="trainingDs">
                <column width="250px">
                    <field property="description"/>
                    <field property="startDate"/>
                    <field property="endDate"/>
                    <field property="status"/>
                </column>
            </fieldGroup>
            <groupBox id="recBookListBox"
                      caption="msg://com.company.hrtrainingplatform.entity/Training.recBookList">
                <table id="recBookListTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="add"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="isbn"/>
                    </columns>
                    <rows datasource="recBookListDs"/>
                    <buttonsPanel>
                        <button action="recBookListTable.add"/>
                        <button action="recBookListTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="locationBox"
                      caption="msg://com.company.hrtrainingplatform.entity/Training.location">
                <table id="locationTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="add"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="locationName"/>
                        <column id="address"/>
                    </columns>
                    <rows datasource="locationDs"/>
                    <buttonsPanel>
                        <button action="locationTable.add"/>
                        <button action="locationTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="attendingListBox"
                      caption="msg://com.company.hrtrainingplatform.entity/Training.attendingList">
                <table id="attendingListTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="add"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="user"/>
                    </columns>
                    <rows datasource="attendingListDs"/>
                    <buttonsPanel>
                        <button action="attendingListTable.add"/>
                        <button action="attendingListTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <frame id="windowActions"
                   height="30px"
                   screen="editWindowActions"/>
        </scrollBox>
    </layout>
</window>
