<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.hrtrainingplatform.web.employee.EmployeeBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.hrtrainingplatform.web.employee">
    <dsContext>
        <datasource id="employeeDs"
                    class="com.company.hrtrainingplatform.entity.Employee"
                    view="employee-view"/>
        <groupDatasource id="employeesDs"
                         class="com.company.hrtrainingplatform.entity.Employee"
                         view="employee-view">
            <query>
                <![CDATA[select e from hrtrainingplatform$Employee e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split height="100%"
               orientation="vertical"
               pos="25"
               width="100%">
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="true,true,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="employeeDs">
                        <column width="250px">
                            <field caption="Employee"
                                   property="user"/>
                            <field caption="Responsible Manager"
                                   property="manager"/>
                            <field caption="Responsible HR Employee"
                                   property="hrEmployee"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="employeesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                    </actions>
                    <columns>
                        <column id="user"
                                caption="Employee"/>
                        <column id="manager"
                                caption="Responsible Manager"/>
                        <column id="hrEmployee"
                                caption="Responsible HR Employee"/>
                    </columns>
                    <rows datasource="employeesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="excelButton"
                                action="table.excel"
                                icon="icons/excel.png"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
        </split>
    </layout>
</window>
