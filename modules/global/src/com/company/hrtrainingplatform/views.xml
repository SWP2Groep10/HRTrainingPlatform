<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.hrtrainingplatform.entity.Address"
          extends="_local"
          name="address-view"/>
    <view class="com.company.hrtrainingplatform.entity.Location"
          extends="_local"
          name="location-view">
        <property name="address"
                  view="_minimal">
            <property name="postalcode"/>
        </property>
    </view>
    <view class="com.company.hrtrainingplatform.entity.Certificate"
          extends="_local"
          name="certificate-view">
        <property name="file"
                  view="_minimal">
            <property name="size"/>
        </property>
    </view>
    <view class="com.company.hrtrainingplatform.entity.Admin"
          extends="_local"
          name="admin-view">
        <property name="user"
                  view="_minimal">
            <property name="password"/>
            <property name="email"/>
            <property name="group"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.hrtrainingplatform.entity.Employee"
          extends="_local"
          name="employee-view">
        <property name="user"
                  view="_minimal">
            <property name="email"/>
            <property name="group"
                      view="_minimal"/>
        </property>
        <property name="manager"
                  view="_minimal">
        </property>
    </view>
    <view class="com.company.hrtrainingplatform.entity.HREmployee"
          extends="_local"
          name="hREmployee-view">
        <property name="user"
                  view="_minimal">
            <property name="password"/>
            <property name="email"/>
            <property name="group"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.hrtrainingplatform.entity.Manager"
          extends="_local"
          name="manager-view">
        <property name="user"
                  view="_minimal">
            <property name="email"/>
            <property name="group"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.hrtrainingplatform.entity.Question"
          extends="_local"
          name="question-view">
        <property name="possibleAnswers"
                  view="_minimal">
            <property name="active"/>
            <property name="answerText"/>
        </property>
        <property name="category"
                  view="_minimal"/>
    </view>
    <view class="com.company.hrtrainingplatform.entity.PossibleAnswer"
          extends="_local"
          name="possibleAnswer-view">
        <property name="question"
                  view="_minimal"/>
    </view>
    <view class="com.company.hrtrainingplatform.entity.PossibleAnswer"
          extends="_local"
          name="possibleAnswer-caption-view"/>
    <view class="com.company.hrtrainingplatform.entity.Survey"
          extends="_local"
          name="survey-view">
        <property name="questions"
                  view="question-view"/>
    </view>
    <view class="com.company.hrtrainingplatform.entity.SelectedAnswer"
          extends="_local"
          name="answer-view">
        <property name="question"
                  view="question-view"/>
        <property name="answer"
                  view="_minimal">
            <property name="active"/>
        </property>
        <property name="filledSurvey"
                  view="_minimal"/>
    </view>
    <view class="com.company.hrtrainingplatform.entity.FilledSurvey"
          extends="_local"
          name="filledSurvey-view">
        <property name="survey"
                  view="survey-view"/>
        <property name="user"
                  view="_minimal"/>
        <property name="answers"
                  view="answer-view"/>
    </view>
    <view class="com.company.hrtrainingplatform.entity.Training"
          extends="_local"
          name="training-view">
        <property name="attendingList"
                  view="_minimal">
            <property name="user"
                      view="_minimal">
                <property name="email"/>
            </property>
        </property>
        <property name="survey"
                  view="_minimal"/>
        <property name="recBookList"
                  view="_minimal"/>
        <property name="location"
                  view="_minimal">
            <property name="address"
                      view="_minimal">
                <property name="postalcode"/>
            </property>
        </property>
    </view>
</views>
